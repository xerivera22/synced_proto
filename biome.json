{
  "$schema": "https://biomejs.dev/schemas/latest/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "useButtonType": "error",
        "useSemanticElements": "off",
        "noStaticElementInteractions": "off",
        "useFocusableInteractive": "off"
      },
      "suspicious": {
        "noUnknownAtRules": "off",
        "noArrayIndexKey": "off"
      }
    }
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "src/**",
      "index.html",
      "vite.config.ts",
      "tailwind.config.js",
      "postcss.config.js",
      "tsconfig.json",
      "tsconfig.node.json"
    ]
  }
}
